{% extends 'layouts/default.njk' %}
{% block body %}
  <div class="wrapper">
    {% include 'partials/header.njk' %}
    <section id="main">
      <div class="container">
        <header>
          <h2>{{ project.title }}</h2>
          <div class="addon">
            <a href="" class="btn btn-danger">Delete project</a>
          </div>
        </header>
        <section id="content">
          <nav>
            <div class="sessions">
            {% for section in sections %}
              <a href="/app/projects/{{ project.id }}/sections/{{section.id}}">{{ section.title }}</a>
            {% endfor %}
            </div>
            <form action="/app/projects/{{ project.id }}/sections/create" method="post">
              <input type="text" name="title" placeholder="New section" maxlength="30">
              <button type="submit" class="btn"><img src="/img/plus.svg"></button>
            </form>
          </nav>
          <div id="edit-form">
            <form method="POST" action="/app/projects/{{ project.id }}/sections/{{activeSection.id}}?_method=PUT" >
              <input type="text" name="title" placeholder="Section Title" value="{{ activeSection.title }}"></input>
              <textarea name="content" class="mde" placeholder="Section Content">{{ activeSection.content }}</textarea>

              <button type="submit">SAVE SECTION</button>
              <a href="/app/projects/{{ project.id }}/sections/{{activeSection.id}}" class="btn btn-cancel">CANCEL</a>
            </form>
          </div>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
