{% extends 'layouts/default.njk' %}
{% block body %}
  <div class="wrapper">
    {% include 'partials/header.njk' %}
    <section id="main">
      <div class="container">
        <header>
          <h2>{{ project.title }}</h2>
          <div class="addon">
            <a href="" class="btn btn-danger">Delete project</a>
          </div>
        </header>

        <section id="content">
          <nav>
            <div class="sessions">
            {% for section in sections %}
              <a href="">{{ section.title }}</a>
            {% endfor %}
            </div>

            <form action="" method="post">
              <input type="text" name="name" placeholder="New section">
              <button type="submit" class="btn"><img src="/img/plus.svg"></button>
            </form>
          </nav>

          <article>
            <div class="project-header">
              <h1>{{ sections[0].title }}</h1>
              <a href="">Delete section</a>
            </div>
            <p>{{ sections[0].content }}</p>
          </article>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
